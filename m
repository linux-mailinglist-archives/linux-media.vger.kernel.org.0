+	enum iris_inst_sub_state clear_sub_state = IRIS_INST_SUB_NONE;
+	bool drc_active = false;
 	int ret;
 
+	drc_active = inst->sub_state & IRIS_INST_SUB_DRC &&
+		inst->sub_state & IRIS_INST_SUB_DRC_LAST;
+
